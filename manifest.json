{
  "manifest_version": 3,
  "name": "YouTube Playlist Duration and Timetable Calculator",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "storage", "tabs"],
  "host_permissions": ["*://www.youtube.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ], 
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
